mixin navbar-unresponsive(title, href)
  nav&attributes(attributes)(role='navigation', class=colorOne).lighten-1
    .nav-wrapper.container
      a#logo-container.brand-logo(href=href)= title
      ul.right
        block
        if user && ~user.id
          li: a.valign-wrapper(href='/profile')
            if user.userpic
              img.responsive-img.valign.circle(style='width: 62px', src='/img/userpic/#{user.userpic}')
            else
              i.large.material-icons(class="white-text") account_circle
          li: a(href='/auth/logout') Log Out
        else
          li: a(href='/auth/login') Log In
          li: a(href='/auth/register') Register
