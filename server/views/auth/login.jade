extends ../layout

block content
  style.
    .btn:hover {background-color: #81d4fa;}
  .container
    br
    br
    form(action="", method="post"): .row: .col.s12.l4.offset-l4
      .card
        .card-content.center-align
          //i.large.material-icons(class="#{colorOne}-text") account_circle
          span.card-title: strong Log In
          input#username(type="text", name="username")
          label(for='username') e-mail

          input#password(type="password", name="password")
          label(for='password') password
        .card-action
          button.btn.right(class=colorOne, type="submit") Enter
          a.btn.btn-flat(href='/') Cancel
